<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Confirmation Code is \nBelow - Enter It And We'll Help \nYou Get Signed  In."
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/shape_02">

        <EditText
            android:id="@+id/oneEdtTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/twoEdtTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/threeEdtTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/fourEdtTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"/>


    </LinearLayout>



</LinearLayout>